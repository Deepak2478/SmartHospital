<core:FragmentDefinition
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Dialog
		title = "Add Relevant Icons">
		<l:VerticalLayout
			class="sapUiContentPadding"
			width="100%">
			<l:content>
				<Label text="Icon Name" />
				<Input
					type="text"
					placeholder="Enter Icon name..." id = "iconname" required = ""/>
			</l:content>
		</l:VerticalLayout>
		<beginButton>
	         <Button
	         	type="Submit"
	            text="Add"
	            press="onAddIconSubmit"/>
      	</beginButton>
      	<endButton>
      		<Button
      			text="Cancel"
      			press = "onCloseAddIconDialog"/>
      	</endButton>
   	</Dialog>

</core:FragmentDefinition>