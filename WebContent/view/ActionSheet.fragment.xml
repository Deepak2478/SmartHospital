<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">

	<ActionSheet
		title="User Options"
		showCancelButton = "true"
		placement="Bottom">
		<buttons>
			<Button text="Refresh" icon = "sap-icon://refresh" press="_refresh"/>
			<Button text="Call For Help" icon = "sap-icon://call" press="_callForHelp" />
			<Button text="Send Message" icon = "sap-icon://iphone" press="_textMessage" />
			<Button text="Feedback" icon="sap-icon://email" press="_feedback"/>
			<Button text="Register Request" icon="sap-icon://request" press="_request"/>
			<Button text="Logout" icon="sap-icon://log" press="_logout"/>
		</buttons>
	</ActionSheet>
</core:FragmentDefinition>